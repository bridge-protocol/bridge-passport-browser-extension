{
  "name": "Bridge Passport",
  "version": "2.5.0",
  "manifest_version": 2,
  "description": "Extension to allow users to create, manage, and use their Bridge Passport on the Bridge Protocol Network",
  "icons": {
    "16": "icons/icon_16.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon_19.png",
      "38": "icons/icon_38.png"
    },
    "default_title": "Bridge Passport",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://bridgeprotocol.azurewebsites.net/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}


